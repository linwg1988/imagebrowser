<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="o.lin.imagebrowser.MainActivity">

    <LinearLayout
        android:id="@+id/rlLocal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <GridView
                android:id="@+id/grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:numColumns="1"></GridView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"></android.support.v7.widget.RecyclerView>

            <RelativeLayout
                android:id="@+id/rlImages"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ivImageA"
                    android:layout_width="100dp"
                    android:scaleType="centerCrop"
                    android:layout_height="100dp" />
                <ImageView
                    android:id="@+id/ivImageB"
                    android:layout_width="200dp"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="100dp"
                    android:layout_height="200dp" />
                <ImageView
                    android:id="@+id/ivImageD"
                    android:layout_width="100dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="100dp"
                    android:layout_height="100dp" />
                <ImageView
                    android:id="@+id/ivImageC"
                    android:layout_width="300dp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="200dp"
                    android:layout_height="100dp" />
            </RelativeLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <HorizontalScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btnPick"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:onClick="pickImage"
                        android:padding="12dp"
                        android:text="本地图片"
                        android:textColor="#333"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/label"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_toRightOf="@+id/btnPick"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="网络图片"
                        android:textColor="#333"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/gridViewBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/label"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="GridView"
                        android:textColor="#333"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/recyclerViewBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/gridViewBtn"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="RecyclerView"
                        android:textColor="#333"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/parentViewBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/gridViewBtn"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="ViewGroup"
                        android:textColor="#333"
                        android:textSize="12sp" />

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="12dp"
                android:text="ScaleType:"
                android:textColor="#00f" />

            <RadioGroup
                android:id="@+id/rgType"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <RadioButton
                    android:id="@+id/rbCenterCrop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CENTER_CROP"
                    android:checked="true"
                    android:textSize="10sp" />

                <RadioButton
                    android:id="@+id/rbFitXY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FIT_XY"
                    android:textSize="10sp" />

                <RadioButton
                    android:id="@+id/rbFitCenter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FIT_CENTER"
                    android:textSize="10sp" />
                <RadioButton
                    android:id="@+id/rbCenterInside"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CENTER_INSIDE"
                    android:textSize="10sp" />
            </RadioGroup>
            <TextView
                android:id="@+id/tvColumnCount"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="12dp"
                android:text="列数：1"
                android:textColor="#f00" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/ivSingle"
        android:layout_width="200dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:transitionName="@string/transition_test"
        android:layout_height="200dp" />
</RelativeLayout>
