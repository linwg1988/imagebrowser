<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="o.lin.imagebrowser.MainActivity">

    <RelativeLayout
        android:id="@+id/rlLocal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <HorizontalScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnPick"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:onClick="pickImage"
                    android:padding="12dp"
                    android:text="本地图片"
                    android:textColor="#333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/label"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/btnPick"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="网络图片"
                    android:textColor="#333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/gridViewBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/label"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="GridView"
                    android:textColor="#333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/recyclerViewBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/gridViewBtn"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="RecyclerView"
                    android:textColor="#333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvColumnCount"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/recyclerViewBtn"
                    android:background="#eee"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="1"
                    android:textColor="#f00" />
            </LinearLayout>
        </HorizontalScrollView>


        <GridView
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/scrollView"
            android:numColumns="1"></GridView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/scrollView"
            android:visibility="gone"></android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</RelativeLayout>
