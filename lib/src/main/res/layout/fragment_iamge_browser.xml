<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >
    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:background="#252025"
        android:alpha="0"
        android:layout_height="match_parent"/>

    <linwg.view.HackyViewPager
        android:id="@+id/vp_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <linwg.view.CirclePageIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9000"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:padding="12dp" />

    <TextView
        android:id="@+id/tvIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#a000"
        android:layout_gravity="bottom"
        android:textColor="#fff"
        android:gravity="center"
        android:text="1/123"
        android:layout_alignParentBottom="true"
        android:padding="6dp" />
    <TextView
        android:id="@+id/tvDescriptions"
        android:layout_width="match_parent"
        android:padding="12dp"
        android:textColor="#fff"
        android:textSize="14sp"
        android:background="#9000"
        android:layout_alignParentBottom="true"
        android:text="afdasfsdagdsfg"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/ivDownLoad"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:scaleType="centerInside"
        android:visibility="invisible"
        android:src="@drawable/save_image_selector" />

    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toLeftOf="@+id/ivDownLoad"
        android:layout_alignWithParentIfMissing="true"
        android:scaleType="centerInside"
        android:visibility="invisible"
        android:src="@drawable/lib_delete_selector" />

    <ImageView
        android:id="@+id/ivCustom"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toLeftOf="@+id/ivDelete"
        android:visibility="invisible"
        android:layout_alignWithParentIfMissing="true"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/tvCustom"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:visibility="invisible"
        android:layout_toLeftOf="@+id/ivCustom"
        android:layout_alignWithParentIfMissing="true"/>
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:padding="12dp"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="16sp"
        android:visibility="gone"
        android:background="#50000000"
        android:layout_height="50dp" />
</RelativeLayout>